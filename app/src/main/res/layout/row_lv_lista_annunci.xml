<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_lv_lista_case"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/immagineAnnuncioLista"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/ic_outline_insert_photo_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

                <TextView
                    android:id="@+id/textViewNomeCasaLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Nome Casa"
                    android:textColor="@color/rosso_scuro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewPrezzCasaLista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="Prezzo al mese"
                    android:textColor="@color/rosso_scuro"
                    android:textSize="18sp" />

        </LinearLayout>

</LinearLayout>