<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sfondo_activity"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".profilo.ProfiloAnnuncio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/immagineAnnuncio"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

        <TextView
            android:id="@+id/et_nomeAnnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="profiloCasa"
            android:padding="15dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/rosso_scuro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:text="Punteggio :" />

            <TextView
                android:id="@+id/et_punteggio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="#D3000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="su" />

            <TextView
                android:id="@+id/et_numRecensioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textColor="#D3000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recensioni" />

        </LinearLayout>

        <TextView
            android:id="@+id/et_indirizzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_outline_map_24"
            android:padding="6dp"
            android:text=""
            android:textColor="#D3000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_sinistra"
                android:padding="5dp"
                android:text="Tipologia stanza"
                android:textColor="@color/rosso_mattone" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_sinistra"
                android:padding="5dp"
                android:text="@string/prezzo"
                android:textColor="@color/rosso_mattone" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_sinistra"
                android:padding="5dp"
                android:text="Proprietario"
                android:textColor="@color/rosso_mattone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/et_tipologiaStanza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_prezzo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_proprietario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="profiloProprietario1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_destra"
                android:padding="5dp"
                android:text="Ospiti:"
                android:textColor="@color/ic_launcher_background" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_destra"
                android:padding="5dp"
                android:text="Numero camere:"
                android:textColor="@color/ic_launcher_background" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_destra"
                android:padding="5dp"
                android:text="Numero bagni:"
                android:textColor="@color/ic_launcher_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/et_ospiti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_numeroCamere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/et_num_bagni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/rosso_scuro"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/servizi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Elenco dei servizi"
            android:textAllCaps="true"
            android:textColor="@color/rosso_scuro"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/arrayListServizi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scrollbars="none"></ListView>

        <TextView
            android:id="@+id/descrizioneAnnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Qui andrà una descrizione della casa. Vi saranno informazioni scritte dal proprietario sulle pricipali caratteristiche dell'abitazione e sul perchè debba essere scelta"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/b_prenota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="prenota"
            android:padding="15dp"
            android:text="Prenota visita"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/IsPreferito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi ai Preferiti" />
    </LinearLayout>
</ScrollView>