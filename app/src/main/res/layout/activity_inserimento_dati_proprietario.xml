<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".InserimentoDatiProprietario">

    <TextView
        android:id="@+id/et_descrizioneP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Breve descrizione"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_numTelP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefono"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_fotoCasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_indirizzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Indirizzo"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_prezzoCasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Prezzo"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_inquiliniPresenti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inquilini"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_serviziCasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Servizi"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/et_descrizioneCasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrizione"
        android:padding="15dp"/>

    <Button
        android:id="@+id/aggiungiCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi Casa" />

    <Button
        android:id="@+id/aggiungiDisponibilita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiungi Disponibilita'" />
</LinearLayout>