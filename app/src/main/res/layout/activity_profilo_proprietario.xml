<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sfondo"
    android:orientation="vertical"
    tools:context=".profilo.ProfiloProprietario">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/immagineProfiloProp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/design_default_color_primary"
        app:civ_border_width="5dp" />

            <ImageButton
                android:id="@+id/button_home3"
                android:layout_width="47dp"
                android:layout_height="38dp"
                android:background="@color/rosso_mattone"
                android:fadingEdge="horizontal|vertical"
                android:onClick="goHome"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.997"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.033"
                app:srcCompat="@drawable/ic_baseline_home_24"
                tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cambiaImmagineProp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambia Immagine " />

        <Button
            android:id="@+id/aggiungiCasa"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="aggiungiNuovaCasa"
            android:text="Aggiungi Casa" />
    </LinearLayout>

    <TextView
                android:id="@+id/text_nomeP"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/etichetta2" />

            <TextView
                android:id="@+id/text_cognomeP"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Cognome" />


            <TextView
                android:id="@+id/text_emailP"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Email" />

            <TextView
                android:id="@+id/text_view_testo1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:text="Case proprietario" />

            <ListView
                android:id="@+id/lv_case_prop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

            <TextView
                android:id="@+id/text_view_testo2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:text="Recensioni Proprietario" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

</LinearLayout>