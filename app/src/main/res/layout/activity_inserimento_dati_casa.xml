<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".registrazione.InserimentoDatiCasa">

    <EditText
        android:id="@+id/et_nomeCasa"
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/background_sinistra"
        android:hint="Scegli il nome della tua casa"
        android:padding="5dp"
        android:textColorHint="@color/rosso_scuro"
        android:textSize="14sp"
        android:translationY="-10dp" />

    <TextView
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="Posizione"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_viaCasa"
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_destra"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="16dp"
        android:hint="Via/Strada/P.zz, numero civico, CAP"
        android:padding="20dp"
        android:textColorHint="@color/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_coordinate_casa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/rosso_scuro"
        android:textStyle="bold" />

    <TextView
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="Caratteristiche principali (numero)"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/background_sinistra"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#Bagni"
            android:textColor="@color/rosso_scuro"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_numeroBagni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_destra"
            android:hint="1"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#Stanze"
            android:textColor="@color/rosso_scuro"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_numeroStanze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_destra"
            android:hint="3"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#Ospisti"
            android:textColor="@color/rosso_scuro"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_numeroOspiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_destra"
            android:hint="2"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="@color/ic_launcher_background" />

    </LinearLayout>

    <Button
        android:id="@+id/i_d_p_continua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="caricaCasa"
        android:text="Continua"
        android:translationY="30dp" />
</LinearLayout>