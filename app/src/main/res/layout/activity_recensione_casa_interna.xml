<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/casaint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"

    android:orientation="vertical"
    tools:context=".recensione.RecensioneCasaInterna">

    <TextView
        android:id="@+id/ratecount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/textView200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valutazione Generale Casa"
        android:textAppearance="?android:textAppearanceLarge" />

    <RatingBar
        android:id="@+id/RatingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/Review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Scrivi recenione" />

    <Button
        android:id="@+id/Submit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="NuovaRecensioneCasa"
        android:text="Invia"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/showRating2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?android:textAppearanceMedium" />


</LinearLayout>