<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".registrazione.InserimentoDatiAnnuncio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona la tua casa"
        android:padding="10dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerCaseProprietario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"/>

    <Button
        android:id="@+id/i_d_a_inserisciCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="inserisciCasa"
        android:text="Inserisci Casa"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipologia di posto letto"
        android:padding="10dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerTipologiaPostoLetto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/tipologiaPostiLetto"
        android:paddingLeft="20dp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="fill">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prezzo: "
            android:padding="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_prezzoMensileAnnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Euro"
            android:padding="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

        <EditText
            android:id="@+id/et_SpeseStraordinarie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Inserisci eventuali spese straordinarie che posso riguardare l'appartamento (conguaglio, caparre extra...)" />

    <Button
        android:id="@+id/i_d_a_continua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="caricaAnnuncio"
        android:text="Continua" />
</LinearLayout>