<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:orientation="vertical"
    tools:context=".home.CaseProprietario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Le tue case"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/aggiungiNuovaCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="inserisciCasa"
        android:text="Aggiungi nuova casa" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/lv_case_prop"
            android:layout_width="fill_parent"
            android:layout_height="600dp">

        </ListView>
    </ScrollView>

</LinearLayout>