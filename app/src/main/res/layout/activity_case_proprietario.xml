<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:orientation="vertical"
    tools:context=".home.CaseProprietario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/case1"
        android:textAllCaps="true"
        android:textColor="@color/rosso_scuro"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/aggiungiNuovaCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="inserisciCasa"
        android:text="@string/aggiungiCasa" />

    <ListView
        android:id="@+id/lv_case_prop"
        android:layout_width="fill_parent"
        android:layout_height="600dp">

    </ListView>

</LinearLayout>