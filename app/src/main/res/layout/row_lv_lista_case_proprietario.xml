<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_lv_lista_case_proprietario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/immagineCasa"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_outline_insert_photo_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNomeCasaProprietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nome Casa" />

        <TextView
            android:id="@+id/textViewIndirizzoCasaProprietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Indirizzo" />

        <TextView
            android:id="@+id/textViewNumeroDiOspiti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Numero di ospiti" />

        <TextView
            android:id="@+id/textViewValutazione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="valuazione" />


    </LinearLayout>

</LinearLayout>