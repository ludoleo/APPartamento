<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.LaTuaCasa">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="La tua Casa!"
        android:textSize="30sp" />
    <Button
        android:id="@+id/recensionicasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recensioni casa" />

    <Button
        android:id="@+id/vaiprop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recensioni proprietario"/>

    <Button
        android:id="@+id/vaicoinq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recensioni coinquilino" />

</LinearLayout>