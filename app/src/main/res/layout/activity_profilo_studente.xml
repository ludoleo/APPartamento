<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right"
    tools:context=".profilo.ProfiloStudente">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/MenuStyle">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/immagineProfiloStud"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            app:civ_border_color="@color/rosso_scuro"
            app:civ_border_width="2dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/changestudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cambiaImmagine" />

                <Button
                    android:id="@+id/modificaProfilo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="@string/modificaProfilo" />

                <Button
                    android:id="@+id/button_la_tua_casa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:onClick="laTuaCasa"
                    android:text="@string/laMiaCasa" />

                <ImageButton
                    android:id="@+id/button_home3"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@color/rosso_mattone"
                    android:contentDescription="@string/home"
                    android:onClick="goHome"
                    android:translationX="5dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_baseline_home_24"
                    tools:ignore="VectorDrawableCompat" />
            </GridLayout>

            <TextView
                android:id="@+id/text_info"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="@string/informazioniPersonali"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nome"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/nome"></TextView>

                    <TextView
                        android:id="@+id/text_cognome"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/cognome" />

                    <TextView
                        android:id="@+id/text_descrizione"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/descrizione" />

                    <TextView
                        android:id="@+id/text_universita"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/universita" />

                    <TextView
                        android:id="@+id/text_indirizzoLaurea"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="@string/indirizzoLaurea" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="204dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hobby_studente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""></TextView>

                    <ListView
                        android:id="@+id/listView_hobby_profilo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ListView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>