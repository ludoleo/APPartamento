<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:orientation="vertical"
    tools:context=".profilo.ProfiloStudente">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/MenuStyle">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="159dp">


        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/immagineProfiloStud"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            app:civ_border_color="@color/design_default_color_primary"
            app:civ_border_width="2dp" />

        <ImageButton
            android:id="@+id/button_home3"
            android:layout_width="47dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:background="@color/rosso_mattone"
            android:fadingEdge="horizontal|vertical"
            android:onClick="goHome"
            android:visibility="visible" />

        <Button
            android:id="@+id/changestudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:text="Change Image " />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_info"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="@string/etichetta6"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/text_nome"
            android:layout_width="match_parent"
            android:layout_height="44dp"></TextView>

        <TextView
            android:id="@+id/text_cognome"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/etichetta3" />

        <TextView
            android:id="@+id/text_telefono"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/etichetta5" />

        <TextView
            android:id="@+id/text_descrizione"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/etichetta4" />

        <TextView
            android:id="@+id/text_universita"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="UniveristÃ " />

        <TextView
            android:id="@+id/text_indirizzoLaurea"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Indirizzo Laurea" />

        <Button
            android:id="@+id/modificaProfilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Bottone2" />

        <Button
            android:id="@+id/button_la_tua_casa"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="laTuaCasa"
            android:text="La mia casa" />

    </LinearLayout>


</LinearLayout>