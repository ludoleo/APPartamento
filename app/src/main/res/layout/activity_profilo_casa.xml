<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_horizontal"
    android:orientation="vertical"
    tools:context=".ProfiloCasa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/et_nomeCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome dell'appartamento"
            android:textColor="#D3000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_punteggio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="punteggio"
                android:textColor="#D3000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/et_numRecensioni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(#recensioni)"
                android:textColor="#D3000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/et_localita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="localita"
                android:textColor="#D3000000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_tipologiaStanza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="tipologiaStanza"
                android:textColor="#D3000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/et_prezzo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="prezzo"
                android:textColor="#D3000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/et_proprietario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="proprietario"
                android:textColor="#D3000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_ospiti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ospiti"
                android:textColor="#D3000000"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/et_numeroCamere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="numero camere"
                android:textColor="#D3000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/et_num_bagni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="numero bagni"
                android:textColor="#D3000000"
                android:textSize="16sp"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/servizi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco dei servizi"
            android:textColor="#D3000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/arrayListServizi"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></LinearLayout>

        <TextView
            android:id="@+id/posizione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posizione" />

        <TextView
            android:id="@+id/descrizione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qui andrà una descrizione della casa. Vi saranno informazioni scritte dal proprietario sulle pricipali caratteristiche dell'abitazione e sul perchè debba essere scelta" />

        <Button
            android:id="@+id/b_prenota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="prenota"
            android:text="Prenota visita" />

    </LinearLayout>

</ScrollView>