<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_activity"
    android:orientation="vertical"
    tools:context=".ricercalloggio.ListaAnnunci">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_scegli_annunci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/scegliAnnunci"
            android:textColor="@color/rosso_scuro"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/bottone_vedi_mappa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="visualizzaMappa"
            android:text="@string/mappa" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="right"
        android:text="Ordina per prezzo" />

    <ListView
        android:id="@+id/lv_elencoAnnunci"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/ic_baseline_horizontal_rule_24">

    </ListView>


</LinearLayout>