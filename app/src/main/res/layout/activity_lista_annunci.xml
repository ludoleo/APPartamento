<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ricercalloggio.ListaAnnunci">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scegli i migliori annunci"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_elencoAnnunci"/>

    </ScrollView>

    <Button
        android:id="@+id/bottone_vedi_casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="visualizzaMappa"
        android:text="Visulaizza Mappa" />

</LinearLayout>